public class FindCharacterInString {
    public static void main(String[] args) {
        String string = "This is a string with a given character.";
        char character = 'a';

        // Initialize a variable to store the index of the character
        int index = -1;

        // Iterate over the string and search for the character
        for (int i = 0; i < string.length(); i++) {
            if (string.charAt(i) == character) {
                index = i;
                break;
            }
        }

        // If the character is not found, print a message
        if (index == -1) {
            System.out.println("The character is not present in the string.");
        } else {
            System.out.println("The character is present at index " + index);
        }
    }
}
